{
	"name": "phpgt/gtcommand",
	"description": "Provides the `gt` command for automating WebEngine development.",
	"bin": [
		"bin/gt"
	],

	"require": {
		"php": ">=8.0",
		"phpgt/cli": "^1.3",
		"phpgt/server": "^1.1"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5",
		"phpstan/phpstan": "^0.12"
	},

	"autoload": {
		"psr-4": {
			"Gt\\GtCommand\\": "./src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Gt\\GtCommand\\Test\\": "./test/phpunit"
		}
	},

	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/PhpGt"
		}
	]
}
