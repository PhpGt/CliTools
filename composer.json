{
	"name": "phpgt/gtcommand",
	"description": "Provides the `gt` command for automating WebEngine development.",
	"bin": [
		"bin/gt"
	],

	"require": {
		"php": ">=8.2",
		"phpgt/cli": "^1.3",
		"phpgt/server": "dev-master as v1.1.5",
		"phpgt/cron": "^1.0",
		"phpgt/database": "^1.6",
		"phpgt/build": "^1.0"
	},
	"require-dev": {
		"phpstan/phpstan": "^v1.10",
		"phpmd/phpmd": "^2.13",
		"squizlabs/php_codesniffer": "^3.7"
	},

	"autoload": {
		"psr-4": {
			"Gt\\GtCommand\\": "./src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Gt\\GtCommand\\Test\\": "./test/phpunit"
		}
	},

	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/PhpGt"
		}
	]
}
