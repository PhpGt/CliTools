{
	"name": "phpgt/gtcommand",
	"description": "Provides the `gt` command for automating WebEngine development.",
	"bin": [
		"bin/gt"
	],

	"require": {
		"php": ">=8.0",
		"phpgt/cli": "^1.3",
		"phpgt/server": "dev-master as v1.1.5",
		"phpgt/cron": "^1.0",
		"phpgt/database": "^1.3",
		"phpgt/build": "^1.0"
	},
	"require-dev": {
		"phpstan/phpstan": "v1.8.0",
		"phpunit/phpunit": "v9.5.21"
	},

	"autoload": {
		"psr-4": {
			"Gt\\GtCommand\\": "./src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Gt\\GtCommand\\Test\\": "./test/phpunit"
		}
	},

	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/PhpGt"
		}
	]
}
