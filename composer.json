{
	"name": "phpgt/installer",
	"description": "Provides the `gt` command for automating WebEngine development.",
	"bin": [
		"bin/gt.php"
	],

	"require": {
		"php": ">=8.0",
		"phpgt/cli": "^1.3.1"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5.5",
		"phpstan/phpstan": "^0.12.88"
	},

	"autoload": {
		"psr-4": {
			"Gt\\CliTools\\": "./src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Gt\\CliTools\\Test\\": "./test/phpunit"
		}
	},

	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/PhpGt"
		}
	]
}
